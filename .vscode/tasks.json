{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "prepare",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "command": "rm -Rf build ; mkdir build ; mkdir build/debug ; mkdir build/release ; mkdir build/test_debug ; mkdir build/test_release",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            },
        },
        {
            "label": "cmake_debug",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}/build/debug"
            },
            "command": "cmake -G \"Unix Makefiles\" -DBUILD_FOR_CONTROLLER=ON -DCMAKE_BUILD_TYPE=Debug ${workspaceRoot}",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "cmake_test_debug",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}/build/test_debug"
            },
            "command": "cmake -G \"Unix Makefiles\" -DBUILD_TESTS=ON -DCMAKE_BUILD_TYPE=Debug ${workspaceRoot}",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "build_debug",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}/build/debug"
            },
            "command": "cmake --build .",
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "build_test_debug",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}/build/test_debug"
            },
            "command": "cmake --build .",
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "cmake_release",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}/build/release"
            },
            "command": "cmake -G \"Unix Makefiles\" -DBUILD_FOR_CONTROLLER=ON -DCMAKE_BUILD_TYPE=Release ${workspaceRoot}",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "cmake_test_release",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}/build/test_release"
            },
            "command": "cmake -G \"Unix Makefiles\" -DBUILD_TESTS=ON -DCMAKE_BUILD_TYPE=Release ${workspaceRoot}",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "build_release",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}/build/release"
            },
            "command": "cmake --build .",
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "build_test_release",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}/build/test_release"
            },
            "command": "cmake --build .",
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "run_tests_debug",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}/build/test_debug"
            },
            "command": "ctest -V",
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "run_tests_release",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}/build/test_release"
            },
            "command": "ctest -V",
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "build_and_run_tests_debug",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}/build/test_debug"
            },
            "command": "cmake --build . && ctest -V --exclude-regex \".*IntegrationTests.*\"",
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "build_and_run_integration_tests_debug",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}/build/test_debug"
            },
            "command": "cmake --build . && ctest -V --exclude-regex \".*UnitTests.*\"",
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "cmake_test_application",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}/build/release"
            },
            "command": "cmake -G \"Unix Makefiles\" -DBUILD_FOR_CONTROLLER=ON -DBUILD_TEST_APPLICATION=ON -DCMAKE_BUILD_TYPE=Release ${workspaceRoot}",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "build_test_application",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}/build/release"
            },
            "command": "cmake --build .",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}